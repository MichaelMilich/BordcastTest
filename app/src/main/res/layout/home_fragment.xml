<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModelTest"
            type="millich.michael.bordcasttest.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_layout">
        <Button
            android:id="@+id/button_start_service"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_margin="@dimen/buttons_margin"
            android:background="@color/teal_200"
            android:padding="16dp"
            android:text="@string/start_service"
            android:textColor="#fff"
            android:enabled="@{!viewModelTest.buttonVisible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/buttons_margin"
            android:layout_marginStart="44dp"
            android:background="@color/purple_500"
            android:padding="16dp"
            android:text="@string/stop_service"
            android:textColor="#fff"
            android:enabled="@{viewModelTest.buttonVisible}"
            app:layout_constraintBottom_toBottomOf="@+id/button_start_service"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_start_service"
            app:layout_constraintTop_toTopOf="@+id/button_start_service" />


        <RelativeLayout
            android:id="@+id/relative_layout_test"
            android:layout_width="311dp"
            android:layout_height="375dp"
            android:background="#B7983A"
            app:layout_constraintBottom_toTopOf="@+id/button_start_service"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45">

            <ImageView
                android:id="@+id/analog_clock_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@string/analog_clock_content_description"
                app:srcCompat="@drawable/ic_analog_clock_0_12" />

            <TextView
                android:id="@+id/unlock_count_text_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@{viewModelTest.unlockCount.toString()}"
                android:textSize="40sp" />

           <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:rotation="30"
                android:translationX="77.75dp"
                android:translationY="-134.666dp"
                app:srcCompat="@drawable/ic_dot" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>