<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonStartService"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_margin="@dimen/buttons_margin"
        android:background="@color/teal_200"
        android:padding="16dp"
        android:text="@string/start_service"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/buttons_margin"
        android:layout_marginStart="44dp"
        android:background="@color/purple_500"
        android:padding="16dp"
        android:text="@string/stop_service"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/buttonStartService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonStartService"
        app:layout_constraintTop_toTopOf="@+id/buttonStartService" />

</androidx.constraintlayout.widget.ConstraintLayout>